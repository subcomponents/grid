{% extends "template-default.njk" %}

{% block content %}

<main class="margin-bottom-2">

  <section class="margin-bottom-3">
    <h2 id="grid">Grid layout (12 fractions)</h2>
    <div class="display-grid gap-1">
     	<div class="width-12">
        <div class="bg-primary padding-1 outline"><code>12/12</code></div>
      </div>
      <div class="width-12 width-6-md">
        <div class="bg-primary padding-1 outline"><code>6/12</code></div>
      </div>
      <div class="width-12 width-6-md">
        <div class="bg-primary padding-1 outline"><code>6/12</code></div>
      </div>
      <div class="width-12 width-6-md width-4-lg">
        <div class="bg-primary padding-1 outline"><code>4/12</code></div>
      </div>
      <div class="width-12 width-6-md width-4-lg">
        <div class="bg-primary padding-1 outline"><code>4/12</code></div>
      </div>
      <div class="width-12 width-6-md width-4-lg">
        <div class="bg-primary padding-1 outline"><code>4/12</code></div>
      </div>
      <div class="width-12 width-3-md">
        <div class="bg-primary padding-1 outline"><code>3/12</code></div>
      </div>
      <div class="width-12 width-3-md">
        <div class="bg-primary padding-1 outline"><code>3/12</code></div>
      </div>
      <div class="width-12 width-6-md width-3-lg">
        <div class="bg-primary padding-1 outline"><code>3/12</code></div>
      </div>
      <div class="width-12 width-6-md width-3-lg">
        <div class="bg-primary padding-1 outline"><code>3/12</code></div>
      </div>
    </div>
    <p><!--spacer--></p>
<pre><code>&lt;div class="display-grid gap-1"&gt;
  &lt;div class="width-6"&gt;...&lt;/div&gt;
  &lt;div class="width-6"&gt;...&lt;/div&gt;
  ...
&lt;/div&gt;</code></pre>
  </section>

  <section class="margin-bottom-3">
    <h2 id="height">Height</h2>
    <div class="display-grid gap-1">
      <div class="width-12-xs width-12-md width-6-lg height-2-lg bg-primary padding-1 outline">
        <code>.height-2</code>
      </div>
      <div class="width-12-xs width-6-md">
        <div class="bg-primary padding-1 outline"><code></code></div>
      </div>
      <div class="width-12-xs width-6-md">
        <div class="bg-primary padding-1 outline"><code></code></div>
      </div>
    </div>
    <br>
<pre><code>&lt;div class="display-grid gap-1"&gt;
  &lt;div class="width-12-xs width-12-md width-6-lg height-2-lg"&gt;...&lt;/div&gt;
  &lt;div class="width-12-xs width-6-md"&gt;...&lt;/div&gt;
  &lt;div class="width-12-xs width-6-md"&gt;...&lt;/div&gt;
&lt;/div&gt;</code></pre>
  </section>

  <section class="margin-bottom-3">
    <h2 id="auto-fill">Auto-fill</h2>
    <p>Fill items as they appear</p>
    <p>Optional: <code>.grid[style="--min-width: &lt;length&gt;"]</code></p>
    <div class="display-grid gap-1 auto-fill">
      <div class="bg-primary padding-1 outline"><code>div</code></div>
      <div class="bg-primary padding-1 outline"><code>div</code></div>
      <div class="bg-primary padding-1 outline"><code>div</code></div>
      <div class="bg-primary padding-1 outline"><code>div</code></div>
      <div class="bg-primary padding-1 outline"><code>div</code></div>
      <div class="bg-primary padding-1 outline"><code>div</code></div>
    </div>
    <br>
<pre><code>&lt;div class="display-grid auto-fill gap-1"&gt;
  &lt;div&gt;...&lt;/div&gt;
  &lt;div&gt;...&lt;/div&gt;
  &lt;div&gt;...&lt;/div&gt;
&lt;/div&gt;
</code></pre>
  </section>

  <section class="margin-bottom-3">
    <h2 id="gap">Gap</h2>
    <p><code>.grid.gap-<em>n</em> (0-5)</code></p>
    <div class="margin-bottom-2">
      <div class="display-grid gap-3">
        <div class="width-12-xs width-4-md">
          <div class="bg-primary padding-1 outline"><code>.width-max</code></div>
        </div>
        <div class="width-12-xs width-4-md">
          <div class="bg-primary padding-1 outline"><code>.width-max</code></div>
        </div>
        <div class="width-12-xs width-4-md">
          <div class="bg-primary padding-1 outline"><code>.width-max</code></div>
        </div>
      </div>
    </div>
    <p><code>.grid[style="--gap: <em>&lt;length&gt;</em>"]</code></p>
    <div class="margin-bottom-1">
      <div class="display-grid" style="--gap: 3em;">
        <div class="width-12-xs width-4-md">
          <div class="bg-primary padding-1 outline"><code>.width-max</code></div>
        </div>
        <div class="width-12-xs width-4-md">
          <div class="bg-primary padding-1 outline"><code>.width-max</code></div>
        </div>
        <div class="width-12-xs width-4-md">
          <div class="bg-primary padding-1 outline"><code>.width-max</code></div>
        </div>
      </div>
    </div>
  </section>

</main>

{% endblock %}
